{
  "manifest_version": 3,
  "name": "md outbound",
  "version": "26.0",
  "description": "md outbound - extensión de automatización para Instagram",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "http://www.instagram.com/*",
    "http://instagram.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "http://www.instagram.com/*",
        "http://instagram.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
